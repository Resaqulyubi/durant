npm i selenium-webdriver@3.0.0-beta-2 --save
npm install
echo "install unzip"
apt-get install unzip -y
CHROMIUM_ROOT="http://commondatastorage.googleapis.com/chromium-browser-snapshots/Linux_x64"
CHROMIUM_LATEST=`wget -q -O - "$CHROMIUM_ROOT/LAST_CHANGE"`
wget $CHROMIUM_ROOT/$CHROMIUM_LATEST/chrome-linux.zip
echo "unzip linux"
unzip chrome-linux.zip
echo "install xvfb"
apt-get update
export PATH=$PATH:$(pwd)
apt-get install xvfb -y
apt-get install libxcomposite-dev -y
apt-get install libxcursor1 -y
apt-get install libxi6 libgconf-2-4 -y
apt-get install libxtst6 -y
apt-get install libnss3 -y
apt-get install libcups2 -y
apt-get install libxss1 -y
apt-get install libxrandr2 -y
apt-get install libasound2 -y
apt-get install libatk1.0-0 -y
apt-get install libgtk-3-0-dbg -y